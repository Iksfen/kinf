#include <iostream>
using namespace std;
int main ()
{
int n, b, c, a, d, i = 1;
cin >> n;
c = 2 * n - 1;
d = n;
a = n;
c = b;
  while (n > 0) {
		d = a;
		while (d > 1) {
			cout << " " ;
			d--;
		}
		while (b > 0) {
			while (i < c) {
				cout << "*" ;
				i = i + 2;
			}
			cout << "" << endl;
		}
		n --;
	}
}            // wyniki pracy po 2 godzinach (bez przesady)
